@model IEnumerable<WordSearchWebApplication.Models.WordSearchResult>

@{
    ViewData["Title"] = "List of results";
}

<div class="container">
    @{
        await Html.RenderPartialAsync("_MessageView");
    }

    @if (Model != null && Model.Count() > 0)
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Url)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Keyword)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Time)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TimeForTest)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumberOfHits)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Url)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Keyword)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Time)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TimeForTest)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberOfHits)
                        </td>
                    </tr>
                }
            </tbody>
    </table>
    }
</div>
